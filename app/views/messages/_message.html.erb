<div id="<%= dom_id(message) %>_messages" data-controller="message">
  <% if message.user? %>
    <div class="flex w-full mt-2 space-x-3 max-w-xs ml-auto justify-end">
      <div>
        <div class="bg-blue-600 text-white p-3 rounded-l-lg rounded-br-lg">
          <p class="text-sm"><%= message.content %></p>
        </div>
        <div class="text-xs mt-2 text-gray-500 leading-none text-right"><%= l(message.created_at, format: :short) %></div>
      </div>
    </div>
  <% else %>
    <div class="flex w-full mt-2 space-x-3 max-w-xs">
      <div>
        <div class="bg-gray-300 p-3 rounded-r-lg rounded-bl-lg">
          <p class="text-sm"><%= message.content %></p>
        </div>
        <div class="text-xs mt-2 text-gray-500 leading-none"><%= l(message.created_at, format: :short) %></div>
      </div>
    </div>
  <% end %>
</div>
